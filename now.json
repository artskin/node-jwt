{
  "version": 2,
  "builds": [
    {
      "src": "/public",
      "use": "@now/static"
    },
    { "src": "src/", "use": "@now/node-server" }
  ],
  "routes": [
    {
      "src": "/users",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/user",
      "dest": "/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/userinfo",
      "dest": "/index.js",
      "methods": ["GET"]
    }
  ]
}